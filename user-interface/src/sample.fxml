            <Button fx:id="calculateHashForFile" disable="true" layoutX="169.0" layoutY="252.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="264.0" text="Обчислити MD5 Hash для вибраного файлу" onAction="#calculateHashForSelectedFile"/>
